@page "/Account/Lockout"
@layout AuthLayout

<PageTitle>Account Locked - CEMS</PageTitle>

<div class="auth-card">
    <div class="auth-card-header">
        <div style="font-size: 4rem; margin-bottom: 1rem;">&#x1F512;</div>
        <h1 class="text-danger">Account Locked</h1>
        <p>This account has been temporarily locked due to multiple failed login attempts.</p>
    </div>
    
    <div class="alert alert-warning">
        <strong>What to do:</strong>
        <ul class="mb-0 mt-2">
            <li>Wait a few minutes before trying again</li>
            <li>Make sure you're using the correct password</li>
            <li>Reset your password if you've forgotten it</li>
        </ul>
    </div>
    
    <div class="d-grid gap-2 mt-4">
        <a href="Account/ForgotPassword" class="btn btn-primary">
            Reset Password
        </a>
        <a href="Account/Login" class="btn btn-outline-secondary">
            &#x2190; Back to Login
        </a>
    </div>
</div>
