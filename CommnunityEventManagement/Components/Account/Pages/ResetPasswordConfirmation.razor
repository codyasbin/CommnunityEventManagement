@page "/Account/ResetPasswordConfirmation"
@layout AuthLayout

<PageTitle>Password Reset Complete - CEMS</PageTitle>

<div class="auth-card">
    <div class="auth-card-header">
        <div style="font-size: 4rem; margin-bottom: 1rem;">&#x1F389;</div>
        <h1>Password Reset Complete!</h1>
        <p>Your password has been successfully reset</p>
    </div>
    
    <div class="alert alert-success">
        <p class="mb-0">&#x2705; You can now log in with your new password.</p>
    </div>
    
    <a href="Account/Login" class="btn btn-primary w-100 btn-lg mt-3">
        Sign In Now
    </a>
</div>
