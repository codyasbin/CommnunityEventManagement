@inherits LayoutComponentBase

<!DOCTYPE html>
<html lang="en">
<body class="auth-page">
    <div class="auth-layout">
        <!-- Background decoration -->
        <div class="auth-background">
            <div class="auth-shape auth-shape-1"></div>
            <div class="auth-shape auth-shape-2"></div>
            <div class="auth-shape auth-shape-3"></div>
        </div>
        
        <!-- Main content -->
        <div class="auth-container">
            <a href="/" class="auth-brand">
                <span class="brand-icon">&#x1F389;</span>
                <span class="brand-text">CEMS</span>
            </a>
            
            @Body
            
            <div class="auth-footer">
                <p>&copy; @DateTime.Now.Year Community Event Management System</p>
            </div>
        </div>
    </div>
</body>
</html>

<style>
    .auth-page {
        margin: 0;
        padding: 0;
        min-height: 100vh;
    }
    
    .auth-layout {
        min-height: 100vh;
        display: flex;
        align-items: center;
        justify-content: center;
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        position: relative;
        overflow: hidden;
        padding: 2rem;
    }
    
    .auth-background {
        position: absolute;
        top: 0;
        left: 0;
        right: 0;
        bottom: 0;
        overflow: hidden;
        z-index: 0;
    }
    
    .auth-shape {
        position: absolute;
        border-radius: 50%;
        opacity: 0.1;
        background: #fff;
    }
    
    .auth-shape-1 {
        width: 600px;
        height: 600px;
        top: -200px;
        right: -100px;
    }
    
    .auth-shape-2 {
        width: 400px;
        height: 400px;
        bottom: -150px;
        left: -100px;
    }
    
    .auth-shape-3 {
        width: 200px;
        height: 200px;
        top: 50%;
        left: 10%;
    }
    
    .auth-container {
        position: relative;
        z-index: 1;
        width: 100%;
        max-width: 480px;
    }
    
    .auth-brand {
        display: flex;
        align-items: center;
        justify-content: center;
        gap: 0.75rem;
        text-decoration: none;
        margin-bottom: 2rem;
    }
    
    .auth-brand .brand-icon {
        font-size: 2.5rem;
    }
    
    .auth-brand .brand-text {
        font-size: 2rem;
        font-weight: 700;
        color: #fff;
        text-shadow: 0 2px 10px rgba(0, 0, 0, 0.2);
    }
    
    .auth-card {
        background: #fff;
        border-radius: 1.5rem;
        box-shadow: 0 25px 50px rgba(0, 0, 0, 0.25);
        padding: 2.5rem;
        animation: slideUp 0.5s ease-out;
    }
    
    @@keyframes slideUp {
        from {
            opacity: 0;
            transform: translateY(30px);
        }
        to {
            opacity: 1;
            transform: translateY(0);
        }
    }
    
    .auth-card-header {
        text-align: center;
        margin-bottom: 2rem;
    }
    
    .auth-card-header h1 {
        font-size: 1.75rem;
        font-weight: 700;
        color: #1a1a2e;
        margin-bottom: 0.5rem;
    }
    
    .auth-card-header p {
        color: #6b7280;
        margin: 0;
    }
    
    .auth-footer {
        text-align: center;
        margin-top: 2rem;
        color: rgba(255, 255, 255, 0.7);
        font-size: 0.875rem;
    }
    
    .auth-footer p {
        margin: 0;
    }
    
    /* Form styling */
    .auth-card .form-control {
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        padding: 0.875rem 1rem;
        font-size: 1rem;
        transition: all 0.2s ease;
    }
    
    .auth-card .form-control:focus {
        border-color: #667eea;
        box-shadow: 0 0 0 3px rgba(102, 126, 234, 0.15);
    }
    
    .auth-card .form-label {
        font-weight: 600;
        color: #374151;
        margin-bottom: 0.5rem;
    }
    
    .auth-card .btn-primary {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        border: none;
        border-radius: 0.75rem;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        transition: all 0.3s ease;
    }
    
    .auth-card .btn-primary:hover {
        transform: translateY(-2px);
        box-shadow: 0 10px 20px rgba(102, 126, 234, 0.3);
    }
    
    .auth-card .btn-outline-secondary {
        border: 2px solid #e5e7eb;
        border-radius: 0.75rem;
        padding: 0.875rem 1.5rem;
        font-size: 1rem;
        font-weight: 600;
        color: #374151;
        transition: all 0.2s ease;
    }
    
    .auth-card .btn-outline-secondary:hover {
        background: #f3f4f6;
        border-color: #d1d5db;
    }
    
    .auth-divider {
        display: flex;
        align-items: center;
        margin: 1.5rem 0;
    }
    
    .auth-divider::before,
    .auth-divider::after {
        content: '';
        flex: 1;
        height: 1px;
        background: #e5e7eb;
    }
    
    .auth-divider span {
        padding: 0 1rem;
        color: #9ca3af;
        font-size: 0.875rem;
    }
    
    .auth-links {
        text-align: center;
        margin-top: 1.5rem;
    }
    
    .auth-links a {
        color: #667eea;
        text-decoration: none;
        font-weight: 500;
        transition: color 0.2s ease;
    }
    
    .auth-links a:hover {
        color: #764ba2;
        text-decoration: underline;
    }
    
    /* Form floating customization */
    .auth-card .form-floating > .form-control {
        padding-top: 1.625rem;
        padding-bottom: 0.625rem;
    }
    
    .auth-card .form-floating > label {
        padding: 0.875rem 1rem;
    }
    
    /* Checkbox styling */
    .auth-card .form-check-input {
        width: 1.25rem;
        height: 1.25rem;
        border: 2px solid #d1d5db;
        border-radius: 0.375rem;
    }
    
    .auth-card .form-check-input:checked {
        background-color: #667eea;
        border-color: #667eea;
    }
    
    /* Alert styling */
    .auth-card .alert {
        border-radius: 0.75rem;
        border: none;
    }
    
    /* Responsive */
    @@media (max-width: 576px) {
        .auth-layout {
            padding: 1rem;
        }
        
        .auth-card {
            padding: 1.5rem;
        }
        
        .auth-brand .brand-text {
            font-size: 1.5rem;
        }
    }
</style>
