@inherits LayoutComponentBase

<div class="page">
    <div class="sidebar">
        <NavMenu />
    </div>

    <main>
        <div class="top-row px-4 d-flex justify-content-between align-items-center">
            <span class="text-muted">Community Event Management System</span>
            <AuthorizeView>
                <Authorized>
                    <div class="d-flex align-items-center gap-3">
                        <a href="Account/Manage" class="text-decoration-none">
                            <span class="bi bi-person-circle me-1"></span> @context.User.Identity?.Name
                        </a>
                        <form action="Account/Logout" method="post">
                            <AntiforgeryToken />
                            <input type="hidden" name="ReturnUrl" value="/" />
                            <button type="submit" class="btn btn-sm btn-outline-danger">
                                Logout
                            </button>
                        </form>
                    </div>
                </Authorized>
                <NotAuthorized>
                    <div class="d-flex gap-2">
                        <a href="Account/Login" class="btn btn-sm btn-outline-primary">Login</a>
                        <a href="Account/Register" class="btn btn-sm btn-primary">Register</a>
                    </div>
                </NotAuthorized>
            </AuthorizeView>
        </div>

        <article class="content px-4">
            @Body
        </article>
    </main>
</div>

<div id="blazor-error-ui" data-nosnippet>
    An unhandled error has occurred.
    <a href="." class="reload">Reload</a>
    <span class="dismiss">🗙</span>
</div>
