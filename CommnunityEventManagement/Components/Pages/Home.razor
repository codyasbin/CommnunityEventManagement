@page "/"
@using CommnunityEventManagement.Data.Models
@using CommnunityEventManagement.Services
@layout ParticipantLayout
@inject IEventService EventService
@inject NavigationManager NavigationManager

<PageTitle>CEMS - Community Event Management</PageTitle>

<!-- Hero Section -->
<div class="hero-section text-center">
    <div class="container hero-content">
        <h1 class="hero-title">🎉 Welcome to CEMS</h1>
        <p class="hero-subtitle mb-4">Discover and join amazing community events happening near you</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="events" class="btn btn-light btn-lg px-4">
                Browse Events
            </a>
            <AuthorizeView>
                <NotAuthorized>
                    <a href="Account/Register" class="btn btn-outline-light btn-lg px-4">
                        Join Now
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<div class="container">
    <!-- Stats Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon primary me-3">
                        📅
                    </div>
                    <div>
                        <div class="stat-value">@upcomingEvents.Count</div>
                        <div class="stat-label">Upcoming Events</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon success me-3">
                        🎯
                    </div>
                    <div>
                        <div class="stat-value">@upcomingEvents.Sum(e => e.RegisteredCount)</div>
                        <div class="stat-label">Total Registrations</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="stat-card">
                <div class="d-flex align-items-center">
                    <div class="stat-icon warning me-3">
                        🏆
                    </div>
                    <div>
                        <div class="stat-value">@upcomingEvents.Sum(e => e.AvailableSpots)</div>
                        <div class="stat-label">Spots Available</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Events Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">🔥 Upcoming Events</h2>
        <a href="events" class="btn btn-outline-primary">View All</a>
    </div>

    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!upcomingEvents.Any())
    {
        <div class="empty-state">
            <div style="font-size: 4rem;">📭</div>
            <h3>No Upcoming Events</h3>
            <p>Check back later for new community events!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var evt in upcomingEvents.Take(6))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card event-card h-100">
                        <div class="event-image">
                            <span>🎪</span>
                        </div>
                        <div class="event-date-badge">
                            <div class="day">@evt.EventDate.Day</div>
                            <div class="month">@evt.EventDate.ToString("MMM")</div>
                        </div>
                        <div class="event-content">
                            <h5 class="event-title">@evt.Name</h5>
                            <p class="text-muted small mb-3">
                                @(evt.Description.Length > 100 ? evt.Description[..100] + "..." : evt.Description)
                            </p>
                            <div class="event-meta mb-2">
                                <div class="mb-1">
                                    <span>📍</span> @evt.Venue?.Name
                                </div>
                                <div class="mb-1">
                                    <span>🕐</span> @evt.StartTime.ToString(@"hh\:mm")
                                </div>
                                <div>
                                    <span>👥</span> @evt.AvailableSpots / @evt.Capacity spots left
                                </div>
                            </div>
                            <div class="capacity-bar mb-3">
                                @{
                                    var percentage = evt.Capacity > 0 ? (evt.RegisteredCount * 100 / evt.Capacity) : 0;
                                    var progressClass = percentage < 50 ? "low" : percentage < 80 ? "medium" : "high";
                                }
                                <div class="progress @progressClass" style="width: @percentage%"></div>
                            </div>
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @foreach (var activity in evt.EventActivities.Take(3))
                                {
                                    <span class="activity-tag">@activity.Activity?.Name</span>
                                }
                            </div>
                            <a href="events/@evt.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Event> upcomingEvents = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            upcomingEvents = await EventService.GetUpcomingEventsAsync();
        }
        finally
        {
            isLoading = false;
        }
    }
}
