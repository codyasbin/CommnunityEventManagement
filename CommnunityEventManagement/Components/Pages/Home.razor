@page "/"
@using CommnunityEventManagement.Data.Models
@using CommnunityEventManagement.Services
@layout ParticipantLayout
@inject IEventService EventService
@inject NavigationManager NavigationManager

<PageTitle>CEMS - Community Event Management</PageTitle>

<!-- Hero Section -->
<div class="hero-section text-center">
    <div class="container hero-content">
        <h1 class="hero-title">&#x1F389; Welcome to CEMS</h1>
        <p class="hero-subtitle mb-4">Discover and join amazing community events happening near you</p>
        <div class="d-flex justify-content-center gap-3">
            <a href="events" class="btn btn-light btn-lg px-4">
                Browse Events
            </a>
            <AuthorizeView>
                <NotAuthorized>
                    <a href="Account/Register" class="btn btn-outline-light btn-lg px-4">
                        Join Now
                    </a>
                </NotAuthorized>
            </AuthorizeView>
        </div>
    </div>
</div>

<div class="container py-4">
    <!-- Stats Section -->
    <div class="row g-4 mb-5">
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-primary bg-opacity-10 p-3 me-3">
                        <span class="text-primary fs-3">&#x1F4C5;</span>
                    </div>
                    <div>
                        <div class="fs-3 fw-bold">@upcomingEvents.Count</div>
                        <div class="text-muted">Upcoming Events</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-success bg-opacity-10 p-3 me-3">
                        <span class="text-success fs-3">&#x1F3AF;</span>
                    </div>
                    <div>
                        <div class="fs-3 fw-bold">@upcomingEvents.Sum(e => e.RegisteredCount)</div>
                        <div class="text-muted">Total Registrations</div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card">
                <div class="card-body d-flex align-items-center">
                    <div class="rounded-circle bg-warning bg-opacity-10 p-3 me-3">
                        <span class="text-warning fs-3">&#x1F3C6;</span>
                    </div>
                    <div>
                        <div class="fs-3 fw-bold">@upcomingEvents.Sum(e => e.AvailableSpots)</div>
                        <div class="text-muted">Spots Available</div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Upcoming Events Section -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h2 class="fw-bold mb-0">Upcoming Events</h2>
        <a href="events" class="btn btn-outline-primary">View All</a>
    </div>

    @if (isLoading)
    {
        <div class="text-center py-5">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!upcomingEvents.Any())
    {
        <div class="text-center py-5">
            <div class="display-1 text-muted">&#x1F4ED;</div>
            <h3>No Upcoming Events</h3>
            <p class="text-muted">Check back later for new community events!</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var evt in upcomingEvents.Take(6))
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card event-card h-100">
                        @if (!string.IsNullOrEmpty(evt.ImageUrl))
                        {
                            <img src="@evt.ImageUrl" class="card-img-top" alt="@evt.Name" style="height: 180px; object-fit: cover;" />
                        }
                        else
                        {
                            <div class="card-img-top d-flex align-items-center justify-content-center text-white" style="height: 180px; @GetEventImageStyle(evt)">
                                <span style="font-size: 3rem;">&#x1F3AA;</span>
                            </div>
                        }
                        <div class="position-absolute top-0 end-0 m-2">
                            <div class="bg-white rounded px-2 py-1 text-center shadow-sm">
                                <div class="fw-bold text-primary">@evt.EventDate.Day</div>
                                <div class="small text-muted">@evt.EventDate.ToString("MMM")</div>
                            </div>
                        </div>
                        <div class="card-body">
                            <h5 class="card-title fw-bold">@evt.Name</h5>
                            <p class="text-muted small mb-3">
                                @(evt.Description.Length > 100 ? evt.Description[..100] + "..." : evt.Description)
                            </p>
                            <div class="small text-muted mb-2">
                                <div class="mb-1">&#x1F4CD; @evt.Venue?.Name</div>
                                <div class="mb-1">&#x1F551; @evt.StartTime.ToString(@"hh\:mm")</div>
                                <div>&#x1F465; @evt.AvailableSpots / @evt.Capacity spots left</div>
                            </div>
                            <div class="progress mb-3" style="height: 6px;">
                                @{
                                    var percentage = evt.Capacity > 0 ? (evt.RegisteredCount * 100 / evt.Capacity) : 0;
                                    var barColor = percentage < 50 ? "#43e97b" : percentage < 80 ? "#ffc107" : "#dc3545";
                                }
                                <div class="progress-bar" style="width: @percentage%; background-color: @barColor;"></div>
                            </div>
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @foreach (var activity in evt.EventActivities.Take(3))
                                {
                                    <span class="badge bg-light text-dark">@activity.Activity?.Name</span>
                                }
                            </div>
                            <a href="events/@evt.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Event> upcomingEvents = new();
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            upcomingEvents = await EventService.GetUpcomingEventsAsync();
        }
        finally
        {
            isLoading = false;
        }
    }

    private string GetEventImageStyle(Event evt)
    {
        var gradients = new[]
        {
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)"
        };
        return $"background: {gradients[evt.Id % gradients.Length]};";
    }
}
