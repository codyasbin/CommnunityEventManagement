@page "/events"
@using CommnunityEventManagement.Data.Models
@using CommnunityEventManagement.Services
@inject IEventService EventService
@inject IVenueService VenueService
@inject IActivityService ActivityService
@inject NavigationManager NavigationManager
@rendermode InteractiveServer

<PageTitle>Browse Events - CEMS</PageTitle>

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h1 class="fw-bold mb-1">?? Browse Events</h1>
            <p class="text-muted mb-0">Discover community events and register to participate</p>
        </div>
    </div>

    <!-- Filter Section -->
    <div class="filter-section">
        <div class="row g-3">
            <div class="col-md-3">
                <label class="form-label">Search</label>
                <input type="text" class="form-control" placeholder="Search events..." 
                       @bind="filter.SearchTerm" @bind:event="oninput" @bind:after="OnFilterChange" />
            </div>
            <div class="col-md-2">
                <label class="form-label">From Date</label>
                <input type="date" class="form-control" @bind="filter.FromDate" @bind:after="OnFilterChange" />
            </div>
            <div class="col-md-2">
                <label class="form-label">To Date</label>
                <input type="date" class="form-control" @bind="filter.ToDate" @bind:after="OnFilterChange" />
            </div>
            <div class="col-md-2">
                <label class="form-label">Venue</label>
                <select class="form-select" @bind="filter.VenueId" @bind:after="OnFilterChange">
                    <option value="">All Venues</option>
                    @foreach (var venue in venues)
                    {
                        <option value="@venue.Id">@venue.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-2">
                <label class="form-label">Activity</label>
                <select class="form-select" @bind="filter.ActivityId" @bind:after="OnFilterChange">
                    <option value="">All Activities</option>
                    @foreach (var activity in activities)
                    {
                        <option value="@activity.Id">@activity.Name</option>
                    }
                </select>
            </div>
            <div class="col-md-1 d-flex align-items-end">
                <button class="btn btn-outline-secondary w-100" @onclick="ClearFilters">
                    Clear
                </button>
            </div>
        </div>
    </div>

    <!-- Events List -->
    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (!events.Any())
    {
        <div class="empty-state">
            <div style="font-size: 4rem;">??</div>
            <h3>No Events Found</h3>
            <p>Try adjusting your filters or check back later for new events.</p>
        </div>
    }
    else
    {
        <div class="row g-4">
            @foreach (var evt in events)
            {
                <div class="col-md-6 col-lg-4">
                    <div class="card event-card h-100">
                        <div class="event-image" style="@GetEventImageStyle(evt)">
                            <span>??</span>
                        </div>
                        <div class="event-date-badge">
                            <div class="day">@evt.EventDate.Day</div>
                            <div class="month">@evt.EventDate.ToString("MMM")</div>
                        </div>
                        <div class="event-content">
                            <div class="d-flex justify-content-between align-items-start mb-2">
                                <h5 class="event-title mb-0">@evt.Name</h5>
                                @if (evt.IsFull)
                                {
                                    <span class="badge badge-full">Full</span>
                                }
                                else
                                {
                                    <span class="badge badge-@evt.Status.ToString().ToLower()">@evt.Status</span>
                                }
                            </div>
                            <p class="text-muted small mb-3">
                                @(evt.Description.Length > 100 ? evt.Description[..100] + "..." : evt.Description)
                            </p>
                            <div class="event-meta mb-2">
                                <div class="mb-1">
                                    <span>??</span> @evt.Venue?.Name
                                </div>
                                <div class="mb-1">
                                    <span>??</span> @evt.StartTime.ToString(@"hh\:mm") 
                                    @if (evt.EndTime.HasValue)
                                    {
                                        <span>- @evt.EndTime.Value.ToString(@"hh\:mm")</span>
                                    }
                                </div>
                                <div>
                                    <span>??</span> @evt.AvailableSpots / @evt.Capacity spots left
                                </div>
                            </div>
                            <div class="capacity-bar mb-3">
                                @{
                                    var percentage = evt.Capacity > 0 ? (evt.RegisteredCount * 100 / evt.Capacity) : 0;
                                    var progressClass = percentage < 50 ? "low" : percentage < 80 ? "medium" : "high";
                                }
                                <div class="progress @progressClass" style="width: @percentage%"></div>
                            </div>
                            <div class="d-flex flex-wrap gap-1 mb-3">
                                @foreach (var activity in evt.EventActivities.Take(3))
                                {
                                    <span class="activity-tag">@activity.Activity?.Name</span>
                                }
                                @if (evt.EventActivities.Count > 3)
                                {
                                    <span class="activity-tag">+@(evt.EventActivities.Count - 3) more</span>
                                }
                            </div>
                            <a href="events/@evt.Id" class="btn btn-primary w-100">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@code {
    private List<Event> events = new();
    private List<Venue> venues = new();
    private List<Activity> activities = new();
    private EventFilterModel filter = new() { FromDate = DateTime.Today };
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            venues = await VenueService.GetAllAsync();
            activities = await ActivityService.GetAllAsync();
            await LoadEvents();
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task LoadEvents()
    {
        events = await EventService.GetFilteredEventsAsync(filter);
    }

    private async Task OnFilterChange()
    {
        await LoadEvents();
    }

    private async Task ClearFilters()
    {
        filter = new EventFilterModel { FromDate = DateTime.Today };
        await LoadEvents();
    }

    private string GetEventImageStyle(Event evt)
    {
        var gradients = new[]
        {
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)"
        };
        return $"background: {gradients[evt.Id % gradients.Length]};";
    }
}
