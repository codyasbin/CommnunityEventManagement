@page "/events/{Id:int}"
@using CommnunityEventManagement.Data
@using CommnunityEventManagement.Data.Models
@using CommnunityEventManagement.Services
@using Microsoft.AspNetCore.Authorization
@layout ParticipantLayout
@inject IEventService EventService
@inject IRegistrationService RegistrationService
@inject NavigationManager NavigationManager
@inject AuthenticationStateProvider AuthStateProvider
@rendermode InteractiveServer

<PageTitle>@(evt?.Name ?? "Event Details") - CEMS</PageTitle>

<div class="container py-4">
    @if (isLoading)
    {
        <div class="loading-spinner">
            <div class="spinner-border" role="status">
                <span class="visually-hidden">Loading...</span>
            </div>
        </div>
    }
    else if (evt == null)
    {
        <div class="empty-state">
            <div style="font-size: 4rem;">??</div>
            <h3>Event Not Found</h3>
            <p>The event you're looking for doesn't exist or has been removed.</p>
            <a href="events" class="btn btn-primary">Browse Events</a>
        </div>
    }
    else
    {
        <div class="row">
            <!-- Main Content -->
            <div class="col-lg-8">
                <nav aria-label="breadcrumb" class="mb-3">
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item"><a href="/">Home</a></li>
                        <li class="breadcrumb-item"><a href="events">Events</a></li>
                        <li class="breadcrumb-item active">@evt.Name</li>
                    </ol>
                </nav>

                <div class="card mb-4">
                    <div class="event-image" style="height: 250px; @GetEventImageStyle()">
                        <span style="font-size: 5rem;">??</span>
                    </div>
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-start mb-3">
                            <h1 class="fw-bold mb-0">@evt.Name</h1>
                            <span class="badge badge-@evt.Status.ToString().ToLower() fs-6">@evt.Status</span>
                        </div>
                        
                        <p class="lead text-muted">@evt.Description</p>

                        <hr />

                        <h5 class="fw-bold mb-3">?? Activities</h5>
                        <div class="d-flex flex-wrap gap-2 mb-4">
                            @foreach (var ea in evt.EventActivities)
                            {
                                <span class="badge bg-primary fs-6 fw-normal">@ea.Activity?.Name</span>
                            }
                            @if (!evt.EventActivities.Any())
                            {
                                <span class="text-muted">No activities listed</span>
                            }
                        </div>
                    </div>
                </div>

                <!-- Registrations (Admin View) -->
                <AuthorizeView Roles="Admin">
                    <Authorized>
                        <div class="card">
                            <div class="card-header">
                                <h5 class="mb-0">?? Registrations (@evt.Registrations.Count(r => r.Status == RegistrationStatus.Confirmed))</h5>
                            </div>
                            <div class="card-body">
                                @if (evt.Registrations.Any())
                                {
                                    <div class="table-responsive">
                                        <table class="table table-hover">
                                            <thead>
                                                <tr>
                                                    <th>Participant</th>
                                                    <th>Email</th>
                                                    <th>Registration Date</th>
                                                    <th>Status</th>
                                                </tr>
                                            </thead>
                                            <tbody>
                                                @foreach (var reg in evt.Registrations.OrderByDescending(r => r.RegistrationDate))
                                                {
                                                    <tr>
                                                        <td>@reg.User?.FullName</td>
                                                        <td>@reg.User?.Email</td>
                                                        <td>@reg.RegistrationDate.ToString("MMM dd, yyyy HH:mm")</td>
                                                        <td>
                                                            <span class="badge badge-@reg.Status.ToString().ToLower()">@reg.Status</span>
                                                        </td>
                                                    </tr>
                                                }
                                            </tbody>
                                        </table>
                                    </div>
                                }
                                else
                                {
                                    <p class="text-muted mb-0">No registrations yet.</p>
                                }
                            </div>
                        </div>
                    </Authorized>
                </AuthorizeView>
            </div>

            <!-- Sidebar -->
            <div class="col-lg-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="fw-bold mb-3">?? Event Details</h5>
                        
                        <div class="mb-3">
                            <div class="text-muted small">Date</div>
                            <div class="fw-bold">@evt.EventDate.ToString("dddd, MMMM dd, yyyy")</div>
                        </div>

                        <div class="mb-3">
                            <div class="text-muted small">Time</div>
                            <div class="fw-bold">
                                @evt.StartTime.ToString(@"hh\:mm")
                                @if (evt.EndTime.HasValue)
                                {
                                    <span>- @evt.EndTime.Value.ToString(@"hh\:mm")</span>
                                }
                            </div>
                        </div>

                        <div class="mb-3">
                            <div class="text-muted small">Venue</div>
                            <div class="fw-bold">@evt.Venue?.Name</div>
                            <div class="text-muted small">@evt.Venue?.Address</div>
                        </div>

                        <div class="mb-3">
                            <div class="text-muted small">Capacity</div>
                            <div class="d-flex justify-content-between align-items-center mb-1">
                                <span class="fw-bold">@evt.RegisteredCount / @evt.Capacity</span>
                                <span class="text-muted small">@evt.AvailableSpots spots left</span>
                            </div>
                            <div class="capacity-bar">
                                @{
                                    var percentage = evt.Capacity > 0 ? (evt.RegisteredCount * 100 / evt.Capacity) : 0;
                                    var progressClass = percentage < 50 ? "low" : percentage < 80 ? "medium" : "high";
                                }
                                <div class="progress @progressClass" style="width: @percentage%"></div>
                            </div>
                        </div>

                        <hr />

                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert @(isSuccess ? "alert-success" : "alert-danger") mb-3">
                                @message
                            </div>
                        }

                        <AuthorizeView>
                            <Authorized>
                                @if (isUserRegistered)
                                {
                                    <div class="alert alert-success mb-3">
                                        ? You are registered for this event!
                                    </div>
                                    <a href="my-registrations" class="btn btn-outline-primary w-100">
                                        View My Registrations
                                    </a>
                                }
                                else if (evt.IsFull)
                                {
                                    <div class="alert alert-warning mb-0">
                                        ?? This event is at full capacity.
                                    </div>
                                }
                                else if (!evt.IsUpcoming)
                                {
                                    <div class="alert alert-info mb-0">
                                        This event is not available for registration.
                                    </div>
                                }
                                else
                                {
                                    <button class="btn btn-primary w-100 btn-lg" @onclick="RegisterForEvent" disabled="@isRegistering">
                                        @if (isRegistering)
                                        {
                                            <span class="spinner-border spinner-border-sm me-2"></span>
                                        }
                                        ?? Register Now
                                    </button>
                                }
                            </Authorized>
                            <NotAuthorized>
                                <div class="alert alert-info mb-3">
                                    Please log in to register for this event.
                                </div>
                                <a href="Account/Login?returnUrl=/events/@Id" class="btn btn-primary w-100 btn-lg">
                                    Login to Register
                                </a>
                            </NotAuthorized>
                        </AuthorizeView>
                    </div>
                </div>

                <a href="events" class="btn btn-outline-secondary w-100">
                    ? Back to Events
                </a>
            </div>
        </div>
    }
</div>

@code {
    [Parameter]
    public int Id { get; set; }

    private Event? evt;
    private bool isLoading = true;
    private bool isUserRegistered = false;
    private bool isRegistering = false;
    private string? message;
    private bool isSuccess = false;
    private string? currentUserId;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            evt = await EventService.GetByIdAsync(Id);
            
            var authState = await AuthStateProvider.GetAuthenticationStateAsync();
            if (authState.User.Identity?.IsAuthenticated == true)
            {
                currentUserId = authState.User.FindFirst(System.Security.Claims.ClaimTypes.NameIdentifier)?.Value;
                if (!string.IsNullOrEmpty(currentUserId))
                {
                    isUserRegistered = await RegistrationService.IsUserRegisteredAsync(currentUserId, Id);
                }
            }
        }
        finally
        {
            isLoading = false;
        }
    }

    private async Task RegisterForEvent()
    {
        if (string.IsNullOrEmpty(currentUserId))
            return;

        isRegistering = true;
        message = null;

        try
        {
            await RegistrationService.RegisterAsync(currentUserId, Id);
            isUserRegistered = true;
            isSuccess = true;
            message = "Successfully registered for this event!";
            evt = await EventService.GetByIdAsync(Id); // Refresh event data
        }
        catch (Exception ex)
        {
            isSuccess = false;
            message = ex.Message;
        }
        finally
        {
            isRegistering = false;
        }
    }

    private string GetEventImageStyle()
    {
        var gradients = new[]
        {
            "linear-gradient(135deg, #667eea 0%, #764ba2 100%)",
            "linear-gradient(135deg, #f093fb 0%, #f5576c 100%)",
            "linear-gradient(135deg, #4facfe 0%, #00f2fe 100%)",
            "linear-gradient(135deg, #43e97b 0%, #38f9d7 100%)",
            "linear-gradient(135deg, #fa709a 0%, #fee140 100%)",
            "linear-gradient(135deg, #a18cd1 0%, #fbc2eb 100%)"
        };
        return $"background: {gradients[Id % gradients.Length]};";
    }
}
